options {
        directory "/var/cache/bind";
        recursion no;
        allow-query { any; };
        dnssec-enable no;
        dnssec-validation auto;
        dump-file "/var/cache/bind/dump.db";
        query-source port 15551;
        listen-on port 53 {10.0.5.2;};
        auth-nxdomain no;
};
